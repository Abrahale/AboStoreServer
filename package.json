    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "helmet": "^5.0.2",
    "joi": "^17.5.0",
    "joi-objectid": "^4.0.2",
    "joi-oid": "^1.1.2",
    "mongodb": "^4.3.1",
    "mongoose": "^6.1.7",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
